// creats a window and the width and height and also the name and if is showing or not
string $myCookie = `window -widthHeight 230 110 -title "MakeLifeEz" -visible on`;
 
// creates a layout
columnLayout -adjustableColumn true -rowSpacing 15;
 
// button to select all objects and the colour is dark green
button -label "SelectAll" 
       -backgroundColor 0.2 0.4 0.2 
       -command "select -all;";
 
// button to undo stuff selected and the colour is bright green
button -label "UndoAll" 
       -backgroundColor 0.6 1.0 0.6 
       -command "select -d;";
 
// button to close the window and change the colour to red
button -label "CloseUI" 
       -backgroundColor 0.8 0.2 0.2 
       -command ("deleteUI " + $myCookie);
 
// shows the window
showWindow $myCookie;


// Build the window

string $F1UI = `window -widthHeight 250 200 -title "UI" -visible on`;

columnLayout -adjustableColumn true -rowSpacing 15;

button -label "Create F1Car" -command "polyCube()";
button -label "Create F1Wheels" -command "polyCylinder()";

// Define a procedure for "F1CarBase"
global proc polyCube() {

// create F1CarBase
string $F1CarBase[] = `polyCube`;
select $F1CarBase;
rename $F1CarBase[0] "F1CarBase";
move 0 2 0;
scale 6 2 3;
}
 
// Define a procedure for "F1Wheels"
global proc polyCylinder() {

// create F1WheelsFrontRight
string $F1WheelsFR[] = `polyCylinder`;
select $F1WheelsFR;
rename $F1WheelsFR[0] "F1WheelsFR";
move 2 0.4 2;
rotate -90 0 0;


// create WheelFrontLeft
string $F1WheelsFL[] = `polyCylinder`;
select $F1WheelsFL;
rename $F1WheelsFL[0] "F1WheelsFL";
move 2 0.4 -2;
rotate -90 0 0;


// create WheelBackRight
string $F1WheelsBR[] = `polyCylinder`;
select $F1WheelsBR;
rename $F1WheelsBR[0] "F1WheelsBR";
move -2 0.4 2;
rotate -90 0 0;


// create WheelBackLeft

string $F1WheelsBL[] = `polyCylinder`;
select $F1WheelsBL;
rename $F1WheelsBL[0] "F1WheelsBL";
move -2 0.4 -2;
rotate -90 0 0;
size 0.82 0.82 0.82;

}
 
// Show the window
showWindow;







