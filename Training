//Building Managemen
// Create the UI and deletes if is already there
if (`window -exists BuildMag`) delete `window`;
 
window -title "BuildingMaker" -widthHeight 200 200 F1UI;
columnLayout -adjustableColumn true -rowSpacing 30;

// Starts at middle
global float $xPos = 0;

// spawn a Wall
global proc spawnWall() {
    global float $xPos;
    string $cube[] = `polyCube`;
    move $xPos 0 0 $cube[0];
// snaps the next cube to the other
    $xPos += 1;
}
 
// Button to spawn wall
button -label "Spawn Wall" -command "spawnWall()";
 
showWindow;
 













