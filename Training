// Create a cone
string $cone[] = `polyCone -r 1 -h 2 -sx 20 -sy 1 -sz 0 -ax 0 1 0 -rcp 0 -cuv 3 -ch 1`;
select $cone;
move 0 1 0;
rotate -180;
rename $cone[0] "Fufu";

// Create a sphere
string $sphere[] = `polySphere -r 1 -sx 20 -sy 20 -ax 0 1 0 -cuv 2 -ch 1`;
select $sphere;
move 0 3 0;
rename $sphere[0] "Soup";

//get everything selected
string $sel[] = `ls -sl`;
//Create a loop
for ($each in $sel){
    // do somehthing - use $each to identify the object
    select $each;
    move 0 3 0;
}

// Car Movement
string $sel[] = `ls -sl`;
select "CarBase";
currentTime 1;
setKeyframe -attribute
"translateX" -value 0;

currentTime 2;
setKeyframe -attribute
"translateX" -value -1;

currentTime 2;
setKeyframe -attribute
"translateX" -value -2;



//made a list of staffs and the names
string $staff[] = {"rob","pete","jason"}
//using print will show it also make it so pete will show up
print $staff[1];
//made a SuperHappyDude that is a polycube called happydude
string $SuperHappyDude[] = `polyCube -name "HappyDude"`;
//here it will make SuperHappyDude move     
print $SuperHappyDude[0];
move 0 1 0 -r $SuperHappyDude[0];

//makes the one into a 2
int $one = 2;
// and because one is now 2 is the answer for one 8 10 is 20
int $calc = $one * 10;
// by printing it will show the answer
print $calc;
//ls means list and sl means selection so it will select everything that o selected
string $wow[] = `ls -sl`;
//everything that was selected move to the location
move -r 0 2 0 $sel;

// Create the window
window -widthHeight 300 200 -title "My Perfect UI" -visible on myCookie;
 
// makes a button that can delets the window and is called CloseUI
columnLayout;
button -label "CloseUI" -command "deleteUI myCookie";
 
// Shows the window
showWindow myCookie;


// creats a window and the width and height and also the name and if is showing or not
string $myCookie = `window -widthHeight 300 300 -title "MakeLifeEz" -visible on`;
 
// creates a layout
columnLayout -adjustableColumn true -rowSpacing 10;
 
// button to select all objects and the colour is dark green
button -label "SelectAll" 
       -backgroundColor 0.2 0.4 0.2 
       -command "select -all;";
 
// button to undo stuff selected and the colour is bright green
button -label "UndoAll" 
       -backgroundColor 0.6 1.0 0.6 
       -command "select -d;";
 
// button to close the window and change the colour to red
button -label "CloseUI" 
       -backgroundColor 0.8 0.2 0.2 
       -command ("deleteUI " + $myCookie);
 
// shows the window
showWindow $myCookie;
