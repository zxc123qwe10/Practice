//create window
if (`window -exists BuildMag`) delete `window`;
window -title "BuildingMaker" -widthHeight 200 200 F1UI;
 
//layout
columnLayout -adjustableColumn true -rowSpacing 30;
 
//buttons

button -label "Spawn Greywall" -command "spawnGreywall()";

 
//shows the window
showWindow;
 
//spawns Greywall aka wall
global proc spawnGreywall() {
    global float $xPos;
 
    //copies the greywall
    string $dup[] = `duplicate "greywall"`;
    //moves it to the current position
    move $xPos 0 0 $dup[0];
 
    //snaps to the current spawn
    $xPos += 4; //adjust spacing as needed
}















